@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-7">
        <br /><br />
        <div class="text-center mt-5 mb-2">
            <h1 class="display-1">
                <span class="font-weight-bold">SUPER </span><span class="font-weight-light bg-success text-white">TESTE</span>
            </h1>
            <p class="pt-2">
                <img src="~/images/award.svg" width="120" alt="logo garantia" />
            </p>
        </div>
    </div>
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                    <h3><span id="become">Become </span><span class="font-weight-bold">SUPER</span><span class="font-weight-light">TESTER</span></h3>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-with-icon">
                                <input type="text" class="form-control mb-2" placeholder="Nome">
                                <i class="fas fa-file-signature"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-with-icon">
                                <input type="text" class="form-control mb-2" placeholder="Email">
                                <i class="fas fa-envelope"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-with-icon">
                                <input type="text" class="form-control mb-2" placeholder="CPF">
                                <i class="fas fa-id-card"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-with-icon">
                                <input type="password" class="form-control mb-2" placeholder="Senha">
                                <i class="fas fa-lock"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button class="btn btn-dark btn-block btn-lg">
                                <span class="font-weight-bold">CRIAR</span><span class="font-weight-light">CONTRA</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
